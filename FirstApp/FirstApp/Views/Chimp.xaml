<Window x:Class="First_App.Chimp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:First_App"
        mc:Ignorable="d"
        Title="Chimp" MinHeight="450" MinWidth="800" Icon="/Views/chimpLogo.png"      
        Background="{StaticResource mainBackground}">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="leftAsideGrid" Grid.RowSpan="4" Background="{StaticResource leftAsideBackground}">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="leftAside"/>
            </Grid.ColumnDefinitions>

            <Button Cursor="Hand" Background="{StaticResource leftAsideButton}" HorizontalContentAlignment="Left">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="/Views/playIcon.png" MaxWidth="50" MaxHeight="50" Margin="0,0,5,0" Cursor="Hand"/>
                    <TextBlock Text="Play" FontSize="22px" Cursor="Hand" FontFamily="Autumn" 
                               VerticalAlignment="Center" Foreground="#FFEBEBEB" />
                </StackPanel>
            </Button>
            <Button Grid.Row="1" Cursor="Hand" Background="{StaticResource leftAsideButton}" HorizontalContentAlignment="Left">

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="/Views/playIcon.png" MaxWidth="50" MaxHeight="50" Margin="0,0,5,0" Cursor="Hand"/>
                    <TextBlock Text="Play" FontSize="22px" Cursor="Hand" FontFamily="Autumn" 
                               VerticalAlignment="Center" Foreground="#FFEBEBEB" />
                </StackPanel>
            </Button>
            <Button Grid.Row="2" Cursor="Hand" Background="{StaticResource leftAsideButton}" HorizontalContentAlignment="Left">

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="/Views/playIcon.png" MaxWidth="50" MaxHeight="50" Margin="0,0,5,0" Cursor="Hand"/>
                    <TextBlock Text="Play" FontSize="22px" Cursor="Hand" FontFamily="Autumn" 
                               VerticalAlignment="Center" Foreground="#FFEBEBEB" />
                </StackPanel>
            </Button>
            <Button Grid.Row="3" Cursor="Hand" Background="{StaticResource leftAsideButton}" HorizontalContentAlignment="Left">

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="/Views/playIcon.png" MaxWidth="50" MaxHeight="50" Margin="0,0,5,0" Cursor="Hand"/>
                    <TextBlock Text="Play" FontSize="22px" Cursor="Hand" FontFamily="Autumn" 
                               VerticalAlignment="Center" Foreground="#FFEBEBEB" />
                </StackPanel>
            </Button>
            <Button Grid.Row="4" Cursor="Hand" Background="{StaticResource leftAsideButton}" HorizontalContentAlignment="Left">

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="/Views/playIcon.png" MaxWidth="50" MaxHeight="50" Margin="0,0,5,0" Cursor="Hand"/>
                    <TextBlock Text="Play" FontSize="22px" Cursor="Hand" FontFamily="Autumn" 
                               VerticalAlignment="Center" Foreground="#FFEBEBEB" />
                </StackPanel>
            </Button>
            <Button Grid.Row="5" Cursor="Hand" Background="{StaticResource leftAsideButton}" HorizontalContentAlignment="Left">

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="/Views/playIcon.png" MaxWidth="50" MaxHeight="50" Margin="0,0,5,0" Cursor="Hand"/>
                    <TextBlock Text="Play" FontSize="22px" Cursor="Hand" FontFamily="Autumn" 
                               VerticalAlignment="Center" Foreground="#FFEBEBEB" />
                </StackPanel>
            </Button>
            <Button Grid.Row="6" Cursor="Hand" Background="{StaticResource leftAsideButton}" HorizontalContentAlignment="Left">

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="/Views/playIcon.png" MaxWidth="50" MaxHeight="50" Margin="0,0,5,0" Cursor="Hand"/>
                    <TextBlock Text="Play" FontSize="22px" Cursor="Hand" FontFamily="Autumn" 
                               VerticalAlignment="Center" Foreground="#FFEBEBEB" />
                </StackPanel>
            </Button>
            
        </Grid>
    </Grid>
</Window>
