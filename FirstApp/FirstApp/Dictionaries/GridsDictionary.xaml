<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="mainBackground" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF145B99" Offset="0"/>
        <GradientStop Color="#FF2578BC" Offset="0.163"/>
        <GradientStop Color="#FF1969AB" Offset="0.078"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="leftAsideBackground" EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.6">
        <LinearGradientBrush.RelativeTransform>
            <TransformGroup>
                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                <TranslateTransform/>
            </TransformGroup>
        </LinearGradientBrush.RelativeTransform>
        <GradientStop Color="#CC093757" Offset="0"/>
        <GradientStop Color="#FF003F6C" Offset="0.058"/>
    </LinearGradientBrush>
</ResourceDictionary>