<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="leftAsideButton"  EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.6">
        <LinearGradientBrush.RelativeTransform>
            <TransformGroup>
                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                <TranslateTransform/>
            </TransformGroup>
        </LinearGradientBrush.RelativeTransform>
        <GradientStop Color="#CC093757" Offset="0"/>
        <GradientStop Color="#FF003F6C" Offset="0.058"/>
    </LinearGradientBrush>

    <ControlTemplate TargetType="Button" x:Key="yellowButton">
        <Border CornerRadius="3" BorderBrush="Orange" BorderThickness="0.7"
                    Background="#FFD1D300" 
                    Padding="{TemplateBinding Padding}" 
                    >
            <ContentControl Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" 
                            Content="{TemplateBinding Content}"
                            FontSize="{TemplateBinding FontSize}"
                            FontWeight="{TemplateBinding FontWeight}"/>
        </Border>
    </ControlTemplate>
</ResourceDictionary>